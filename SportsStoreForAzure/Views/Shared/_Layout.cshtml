<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>SportsStore</title>
    <link rel="stylesheet" asp-href-include="lib/bootstrap/dist/css/*.css" type="text/css" />
    <link rel="stylesheet" asp-href-include="lib/fontawesome/css/*.css" type="text/css" />
</head>
<body>
    <div class="navbar navbar-inverse" role="navigation">
        <a class="navbar-brand" asp-action="Index" asp-controller="Home">SPORTS STORE</a>
        <div class="pull-right">
            @await Component.InvokeAsync("CartSummary")
        </div>
    </div>
    <div class="row panel">
        <div id="categories" class="col-xs-3">
            @await Component.InvokeAsync("NavigationMenu")
        </div>
        <div class="col-xs-8">
            @RenderBody()
        </div>
    </div>
    <script asp-src-include="lib/jquery/**/jquery.min.js" type="text/javascript"></script>
    <script asp-src-include="lib/jquery-validation/**/jquery.validation.min.js" type="text/javascript"></script>
    <script asp-src-include="lib/jquery-validation-unobtrusive/**/**.min.js" type="text/javascript"></script>
    <script asp-src-include="lib/bootstrap/dist/js/*.js" type="text/javascript"></script>
</body>
</html>
