<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" asp-href-include="lib/bootstrap/dist/css/*.min.css" />
    <link rel="stylesheet" asp-href-include="css/*.css" />
</head>
<body class="panel panel-danger">
    <div class="panel-heading">
        <h4>
            @ViewBag.Title
            <a class="btn btn-sm btn-primary pull-right"
               asp-action="Logout" asp-controller="Account">
                Log Out
            </a>
        </h4>
    </div>
    <div class="panel-body">
        @if (TempData["message"] != null)
        {
            <div class="alert alert-success">
                @TempData["message"]
            </div>
        }
        @RenderBody()
    </div>
    <script asp-src-include="lib/jquery/**/jquery.min.js" type="text/javascript"></script>
    <script asp-src-include="lib/jquery-validation/**/jquery.validation.min.js" type="text/javascript"></script>
    <script asp-src-include="lib/jquery-validation-unobtrusive/**/**.min.js" type="text/javascript"></script>
    <script asp-src-include="lib/bootstrap/dist/js/*.js" type="text/javascript"></script>
</body>
</html>

